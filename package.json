{
  "rewrites": [
    {
      "source": "/",
      "destination": "/templates/index.html"
    },
    {
      "source": "/about.html",
      "destination": "/templates/includes/about.html"
    },
    {
      "source": "/(.*)\\.html",
      "destination": "/templates/includes/$1.html"
    }
  ],
  "headers": [
    {
      "source": "/templates/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}